package ejercicios;

import java.time.LocalTime;
import java.util.Scanner;

public class Semana01 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		while (true) {
			int definicionesAcum = 0;
			int tiempoXDef= sc.nextInt();

			if (tiempoXDef==0)
				break;
			
			while (true) {
				int definiciones = sc.nextInt();
				if (definiciones==0)
					break;
				definicionesAcum += definiciones;
			}
			
			formatearHora(definicionesAcum, tiempoXDef);
			
			
			
		}
			
		
		
		
	}

	private static LocalTime formatearHora(int definicionesAcum, int tiempoXDef) {
		int totalSegundos = definicionesAcum * tiempoXDef;
		int segundos = totalSegundos % 60;
		int minutos = (totalSegundos % 3600) / 60;
		int horas = totalSegundos / 3600 ;
		LocalTime hora = LocalTime.of(horas, minutos, segundos);
		return hora;
	}

}
